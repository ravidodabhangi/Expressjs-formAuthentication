<section id="authBlock">
  <article>
    <h2>LOGIN</h2>
    <form action="/auth/login" method="post" novalidate>
      <div>
         <input
          type="email"
          placeholder="enter email"
          name="email"
          required
      </div>
      <div>
         <input
          type="password"
          placeholder="enter password"
          name="password"
          required
      </div>
   
      <div>
        <button>LOGIN</button>
      </div>
    </form>
  </article>
</section>